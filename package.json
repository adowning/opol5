{
  "version": "0.0.2-snapshot",
  "name": "andrews-admin",
  "description": "Andrews Admin",
  "author": "adowning <ashdowning@gmail.com>",
  "private": false,
  "license": "MIT",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:adowning/opol5.git"
  },
  "build": {
    "appId": "com.andrews.app",
    "directories": {
      "buildResources": "static"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    },
    "publish": {
      "provider": "github",
      "owner": "adowning",
      "repo": "opol5"
    }
  },
  "scripts": {
    "dev": "./dev_start.sh",
    "webdev": "./dev_start_web.sh",
    "dev:web": "npx nuxt",
    "dev2": "cross-env NODE_ENV=DEV ELECTRON=true  electron .",
    "build": "nuxt build && electron-builder -l",
    "dist": "electron-builder -l --publish always",
    "package": "electron-builder -l",
    "lintfix": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "package-win": "electron-packager . --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.png --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Andrews-Admin\"",
    "create-installer-win": "node installers/windows/createinstaller.js"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.3.1",
    "@nuxtjs/onesignal": "^2.0.0",
    "@nuxtjs/proxy": "^1.2.4",
    "@nuxtjs/pwa": "^2.0.8",
    "aws-amplify": "^0.2.9",
    "dotenv": "^5.0.1",
    "electron-log": "^2.2.14",
    "electron-updater": "^2.21.10",
    "moment": "^2.22.1",
    "nuxt-edge": "^2.0.0-25390984.952dfe0",
    "vue-notification": "^1.3.7",
    "vuetify": "v1.1.0-alpha.6",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "cross-env": "^5.1.4",
    "electron": "2.0.0-beta.7",
    "electron-builder": "^20.8.1",
    "stylus": "~0.54.5",
    "stylus-loader": "~3.0.2"
  }
}
